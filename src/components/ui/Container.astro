---
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={`container ${className || ''}`}>
  <slot />
</div>

<style>
  .container {
    background: rgba(20, 30, 40, 0.5);
    border-radius: 25px;
    padding: 40px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    width: 700px;
    margin: 0 auto;
    color: white;
  }

  @media (max-width: 480px) {
    .container {
      padding: 20px;
      margin: 20px;
    }
  }
</style>